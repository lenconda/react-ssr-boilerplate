{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "outDir": "./dist/",
    "typeRoots": ["./typings"],
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "allowJs": true,
    "pretty": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "jsx": "react",
    "lib": [
      "es5",
      "dom",
      "esnext",
      "es2017",
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "includes": [
    "server",
    "typings"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./node_modules/@types/**/*",
    "dist/**/*",
    "src/**/*",
    "**/*.js"
  ]
}
